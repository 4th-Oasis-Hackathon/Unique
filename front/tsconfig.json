{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "isolatedModules": true,
        "useDefineForClassFields": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "importHelpers": true,
        "baseUrl": ".",
        "checkJs": true
    },
    "include": [
        "src/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.svelte"
    ],
    "references": [{ "path": "./tsconfig.node.json" }]
}
